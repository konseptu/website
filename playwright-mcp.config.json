{
  "browser": {
    "browserName": "chromium",
    "isolated": true,
    "launchOptions": {
      "headless": false,
      "isolated": true,
      "viewport": {
        "width": 1280,
        "height": 720
      }
    }
  },
  "baseURL": "http://localhost:4321",
  "timeout": 30000,
  "screenshot": {
    "mode": "only-on-failure",
    "fullPage": true
  },
  "video": {
    "mode": "retain-on-failure",
    "size": {
      "width": 1280,
      "height": 720
    }
  },
  "vision": true,
  "trace": "on-first-retry",
  "permissions": ["clipboard-read", "clipboard-write"],
  "ignoreHTTPSErrors": true,
  "colorScheme": "light"
}
