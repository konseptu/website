---
import Layout from '~/layouts/PageLayout.astro';

import LivelyHero from '~/components/widgets/LivelyHero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import RotatingWords from '~/components/RotatingWords';
import DotEffect from '~/components/DotEffect.astro';

const verbPairs = [
  ['Streamline', 'automate'],
  ['Digitalize', 'up-scale'],
  ['Re-imagine', 'optimize'],
];

const metadata = {
  title: 'Konseptu â€” upscale and digitize your processes with us!',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <DotEffect />
  <!-- Hero Widget ******************* -->

  <LivelyHero tagline="Ready for the next step?">
    <Fragment slot="title">
      <span class="text-shadow dark:text-shadow-dark">
        <RotatingWords client:load verbPairs={verbPairs} />
        {' '} your business with us!
      </span>
    </Fragment>

    <Fragment slot="subtitle">
      Here at <span class="font-bold ocean-gradient-text">Konseptu</span>, we're committed to delivering all your
      digital business needs.
    </Fragment>

    <Fragment slot="content">
      <button
        class="mt-8 flex w-full flex-col items-center text-md font-medium tracking-wider text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors"
        onclick="document.getElementById('product-1').scrollIntoView({behavior: 'smooth'})"
      >
        See our products
        <span class="mt-2.5">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="animate-bounce"
          >
            <path d="m7 15 5 5 5-5"></path>
            <path d="m7 7 5 5 5-5"></path>
          </svg>
        </span>
      </button>
    </Fragment>
  </LivelyHero>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    id="product-1"
    title="Our products"
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
    items={[
      {
        title: 'Customized to your needs',
        description: `We customize the system according to your business requirements and processes.`,
      },
      {
        title: 'Focus on interoperability',
        description: 'We ensure that your system can integrate with your existing systems and processes.',
      },
      {
        title: 'Security in mind',
        description: 'Avoid the risk of hacks and data leakage',
      },
    ]}
  >
    <Fragment slot="subtitle">
      Tailor-made, performant solutions designed to help you level up your business.
    </Fragment>
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Enterprise Application System</h3>
      Simplify your operations with our robust solutions designed to manage data efficiently and foster interoperability
      across business processes.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
    items={[
      {
        title: 'Intuitive customer experience',
        description: `Lessen confusion at the first step of the customer journey.`,
      },
      {
        title: 'Performance at scale',
        description: 'Accommodate thousands of customers with ease.',
      },
      {
        title: 'SMS notifications',
        description:
          'Send periodic SMS notifications to your customers to inform them of their current position in the queue.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Queuing System</h3>
      Enhance customer satisfaction with intelligent queuing solutions that reduce wait times and optimize service flows.</Fragment
    >

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
    items={[
      {
        title: 'Real-time and on-site assistance',
        description: `Provide timely and accurate assistance to your customers to ensure customer satisfaction and retention.`,
      },
      {
        title: 'Human-like interaction',
        description:
          'Our AI assistant is designed to mimic human interaction, providing a seamless and natural experience for your customers.',
      },
      {
        title: 'Locally hosted and private',
        description:
          'Your data is yours, and we ensure that it is stored and processed locally, without any risk of data leakage or loss.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">On-premise AI Assistant</h3> Leverage
      the power of AI to provide real-time, on-site, and accurate assistance to your customers.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features Widget *************** -->

  <Features
    id="commitment"
    title="Our commitment to you"
    items={[
      {
        title: 'Timely Communication',
        description: 'Clear, transparent, and responsive communication to ensure alignment and success at every stage.',
        icon: 'tabler:bubble-text',
      },
      {
        title: 'Speed of Delivery',
        description: 'Rapid development and deployment without compromising quality or performance.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Performant Systems',
        description: 'Scalable, reliable, and efficient solutions that meet your present and future needs.',
        icon: 'tabler:brand-speedtest',
      },
      {
        title: 'Cost Effectiveness',
        description: 'Delivering high-quality services and systems while ensuring cost-efficiency for our clients.',
        icon: 'tabler:coins',
      },
    ]}
  >
    <Fragment slot="subtitle"> We strive to deliver the best experience to our clients. </Fragment>
  </Features>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact us via e-mail',
        href: 'mailto:contact@konseptu.com',
        target: '_blank',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title"> Let's talk about your business </Fragment>

    <Fragment slot="subtitle">
      Send us an e-mail at <a href="mailto:contact@konseptu.com">contact@konseptu.com</a> and we'll get back to you as soon
      as possible.
    </Fragment>
  </CallToAction>
</Layout>
