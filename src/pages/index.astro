---
import Layout from '~/layouts/PageLayout.astro';

import LivelyHero from '~/components/widgets/LivelyHero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
// import aiAssist from '~/assets/images/ai-assist.svg';
import queueSys from '~/assets/images/queuing-square-hero.png';
import userFeedback from '~/assets/images/user-feedback-square-hero.png';
import enterpriseApp from '~/assets/images/enterprise-app-square-hero.png';
import infrastructure from '~/assets/images/infrastructure-square-hero.png';
import enterpriseHero from '~/assets/images/enterprise-app-long-hero.png';

const metadata = {
  title: 'Konseptu — upscale and digitize your business with us!',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <link slot="head" rel="preload" as="image" href={enterpriseHero.src} fetchpriority="high" />
  <!-- Hero Widget ******************* -->

  <LivelyHero tagline="Ready for the next step?">
    <Fragment slot="title">
      <span class="font-bold ocean-gradient-text">Upscale</span> and <span class="font-bold ocean-gradient-text"
        >digitize</span
      > your business with us!
    </Fragment>

    <Fragment slot="subtitle">
      Here at <span class="font-bold">Konseptu</span>, we're committed to delivering all your digital business needs.
    </Fragment>

    <Fragment slot="content">
      <button
        class="mt-8 flex w-full flex-col items-center text-md font-medium tracking-wider text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors"
        onclick="document.getElementById('product-1').scrollIntoView({behavior: 'smooth'})"
      >
        See our products
        <span class="mt-2.5">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="animate-bounce"
          >
            <path d="m7 15 5 5 5-5"></path>
            <path d="m7 7 5 5 5-5"></path>
          </svg>
        </span>
      </button>
    </Fragment>
  </LivelyHero>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    id="product-1"
    title="Our products"
    image={{
      src: enterpriseApp,
      alt: 'Enterprise App',
    }}
    items={[
      {
        title: 'Complete business digitization',
        description: 'Includes HR, content management, time tracking, ERP, and document management',
      },
      {
        title: 'Seamless integration',
        description: 'Works with your existing systems and processes',
      },
      {
        title: 'Security-first approach',
        description: 'Enterprise-grade encryption and access controls',
      },
      {
        title: 'Scalable architecture',
        description: 'Grows with your business needs',
      },
    ]}
  >
    <Fragment slot="subtitle">
      Transform your business operations with our comprehensive suite of integrated digital solutions.
    </Fragment>
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Enterprise Application System</h3>
      Digitize your business with our comprehensive suite of digital solutions designed to streamline your operations, enhance
      productivity, and improve collaboration across all departments.
      <div class="mt-6">
        <a
          href="/products/enterprise-app"
          class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-semibold transition duration-150 ease-in-out"
        >
          See more →
        </a>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    image={{
      src: queueSys,
      alt: 'Queue System',
    }}
    items={[
      {
        title: 'Intuitive customer experience',
        description: 'Generate tickets on-site or remotely with easy-to-use interfaces',
      },
      {
        title: 'Performance at scale',
        description: 'Handle thousands of daily tickets with priority and standard queues',
      },
      {
        title: 'Real-time monitoring',
        description: 'Keep customers informed through display monitors and SMS updates',
      },
      {
        title: 'Efficient processing',
        description: 'Automatic categorization and data archiving for optimized operations',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Queuing System</h3>
      Streamline your customer queuing with our proven solution, capable of handling thousands of tickets per day while maintaining
      exceptional customer satisfaction.
      <div class="mt-6">
        <a
          href="/products/queuing-system"
          class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-semibold transition duration-150 ease-in-out"
        >
          See more →
        </a>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    image={{
      src: userFeedback,
      alt: 'User Feedback System',
    }}
    items={[
      {
        title: 'Simple kiosk interface',
        description: 'Intuitive touch-screen design with one-tap feedback submission for maximum customer engagement',
      },
      {
        title: 'AI-powered insights',
        description: 'Smart tag-based system that automatically generates textual feedback and sentiment analysis',
      },
      {
        title: 'Real-time analytics',
        description: 'Comprehensive dashboard with instant insights, trends, and customizable reports',
      },
      {
        title: 'High performance',
        description: 'Lightning-fast response times with offline capability and automatic synchronization',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">User Feedback System</h3>
      Transform your customer feedback collection with our intelligent kiosk-based solution that makes gathering and analyzing
      customer experiences effortless.
      <div class="mt-6">
        <a
          href="/products/user-feedback"
          class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-semibold transition duration-150 ease-in-out"
        >
          See more →
        </a>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <!-- <Content
    isReversed
    isAfterContent
    image={{
      src: aiAssist,
      alt: 'Online Business Suite',
    }}
    items={[
      {
        title: 'Swift deployment',
        description: 'Get your website live in as little as 5 days',
      },
      {
        title: 'Complete digital package',
        description:
          'Includes hosting, Google Business Profile, Google Maps, SEO monitoring and boosting, and AI translation',
      },
      {
        title: 'Flexible options',
        description: 'Choose from pre-built templates or custom solutions with ongoing maintenance',
      },
      {
        title: 'Multilingual support',
        description: 'Reach broader, foreign audiences with AI-powered translation',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Online Business Expansion Suite
      </h3>
      Accelerate your online presence with rapid website development and comprehensive digital solutions.
      <div class="mt-6">
        <a
          href="/products/online-business"
          class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-semibold transition duration-150 ease-in-out"
        >
          See more →
        </a>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content> -->

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    image={{
      src: infrastructure,
      alt: 'Infrastructure Solutions',
    }}
    items={[
      {
        title: 'Complete security suite',
        description: 'Includes intrusion detection, CCTV, and network security',
      },
      {
        title: 'Professional network integration',
        description: 'Includes structured cabling and professional network integration',
      },
      {
        title: 'Office hardware and firmware',
        description: 'From operating systems to workstations and servers',
      },
      {
        title: 'Virtualization options',
        description: 'Efficient server and desktop virtualization systems',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Infrastructure Solutions</h3>
      Upscale your business with reliable infrastructure solutions like servers, workstations, networking, and virtualization
      systems.
      <div class="mt-6">
        <a
          href="/products/infrastructure"
          class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-semibold transition duration-150 ease-in-out"
        >
          See more →
        </a>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features Widget *************** -->

  <Features
    id="commitment"
    title="Our commitment to you"
    items={[
      {
        title: 'Timely Communication',
        description: 'Clear, transparent, and responsive communication to ensure alignment and success at every stage.',
        icon: 'tabler:bubble-text',
      },
      {
        title: 'Speed of Delivery',
        description: 'Rapid development and deployment without compromising quality or performance.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Performant Systems',
        description: 'Scalable, reliable, and efficient solutions that meet your present and future needs.',
        icon: 'tabler:brand-speedtest',
      },
      {
        title: 'Cost Effectiveness',
        description: 'Delivering high-quality services and systems while ensuring cost-efficiency for our clients.',
        icon: 'tabler:coin',
      },
    ]}
  >
    <Fragment slot="subtitle"> We strive to deliver the best experience to our clients. </Fragment>
  </Features>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact us via e-mail',
        href: 'mailto:contact@konseptu.com',
        target: '_blank',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title"> Let's talk about your business </Fragment>

    <Fragment slot="subtitle">
      Send us an e-mail at <a href="mailto:contact@konseptu.com">contact@konseptu.com</a> and we'll get back to you as soon
      as possible.
    </Fragment>
  </CallToAction>
</Layout>
