---
import Layout from '~/layouts/PageLayout.astro';

import LivelyHero from '~/components/widgets/LivelyHero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import RotatingWords from '~/components/RotatingWords';
import DotEffect from '~/components/DotEffect.astro';

const verbPairs = [
  ['Streamline', 'automate'],
  ['Digitalize', 'up-scale'],
  ['Re-imagine', 'optimize'],
];

const metadata = {
  title: 'Konseptu â€” upscale and digitize your processes with us!',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <DotEffect />
  <!-- Hero Widget ******************* -->

  <LivelyHero tagline="Ready for the next step?">
    <Fragment slot="title">
      <span>
        <RotatingWords client:load verbPairs={verbPairs} /> your business with us!
      </span>
    </Fragment>

    <Fragment slot="subtitle">
      Here at <span class="font-bold ocean-gradient-text">Konseptu</span>, we're committed to delivering all your
      digital business needs.
    </Fragment>

    <Fragment slot="content">
      <button
        class="mt-8 flex w-full flex-col items-center text-md font-medium tracking-wider text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors"
        onclick="document.getElementById('product-1').scrollIntoView({behavior: 'smooth'})"
      >
        See our products
        <span class="mt-2.5">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="animate-bounce"
          >
            <path d="m7 15 5 5 5-5"></path>
            <path d="m7 7 5 5 5-5"></path>
          </svg>
        </span>
      </button>
    </Fragment>
  </LivelyHero>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    id="product-1"
    tagline="Our products"
    title="Level up your business"
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="subtitle">
      Tailor-made, performant solutions designed to help you level up your business.
    </Fragment>
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Enterprise CMS</h3>
      Gain a competitive advantage by incorporating industry leading practices
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Queuing System</h3>
      Ensure your online presence truly represents you.</Fragment
    >

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">On-premise AI Assistant</h3> Designed
      to foster growth and success.</Fragment
    >

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features Widget *************** -->

  <Features
    id="commitment"
    tagline="Our commitment to you"
    title="What to expect from us"
    items={[
      {
        title: 'Timely Communication',
        description: 'Clear, transparent, and responsive communication to ensure alignment and success at every stage.',
        icon: 'tabler:bubble-text',
      },
      {
        title: 'Speed of Delivery',
        description: 'Rapid development and deployment without compromising quality or performance.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Performant Systems',
        description: 'Scalable, reliable, and efficient solutions that meet your present and future needs.',
        icon: 'tabler:brand-speedtest',
      },
      {
        title: 'Cost Effectiveness',
        description: 'Delivering high-quality services and systems while ensuring cost-efficiency for our clients.',
        icon: 'tabler:coins',
      },
    ]}
  >
    <Fragment slot="subtitle"> We strive to deliver the best experience to our clients. </Fragment>
  </Features>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get template',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">
      Astro&nbsp;+&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Tailwind CSS</span>
    </Fragment>

    <Fragment slot="subtitle">
      Be very surprised by these huge fake numbers you are seeing on this page. <br class="hidden md:inline" />Don't
      waste more time! :P
    </Fragment>
  </CallToAction>
</Layout>
